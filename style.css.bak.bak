body {
background: lightpink;
font-family: "Lato" ,sans-serif;
color: black;
}

.sobre-mim {
	display: flex;
	justify-content: center;
	align-items: center;
    gap: 50px;
	background: lightpink;
	padding: 100px 20px;
	text-align: center;
	flex-wrap:wrap;
}
.texto-sobre h2 {
	font-size: 40px;
	margin-bottom: 10px;
	color:black; 
}

.texto-sobre p {
	font-size:18px;
	max-width:500px;
	line-height: 1.6;
	color:black;
}

.foto-perfil {
	width: 260px;
	height: 260px ;
	border-radius:50%;
	object-fit:cover;
	border: 2px solid ;
	box-shadow: 0 8px 25px rgba(0,0,0,0.4);
	margin-bottom: 25px;
	margin-top: 130px;
}

.barra{
width:100%;
background-color: pink;
color: white;
padding:15px 0;
text-align: center;
font-size: 15px;
font-weight: fixd;
box-shadow: 0 4px 10px rgba(0,0,0,0.2);
position: fixed;
top:0;
left: 0;
z-index:1000;
}	

.projetos {
  padding: 80px 50px;
  background: lightpink;
  text-align: center;
}

.projetos h2 {
  font-size: 32px;
  margin-bottom: 40px;
  color: black;
}

.projetos-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 25px;
}

.habilidades {
  padding: 60px 50px;
  background: whitesmoke;
  text-align: center;
}

.habilidades h2 {
  font-size: 32px;
  margin-bottom: 40px;
  color: black;
}

.habilidades-container {
  display: flex;
  flex-wrap: wrap;   
  gap: 20px 40px;    
  justify-content: center;
  max-width: 800px;
  margin: 0 auto;
}

.habilidade {
  flex: 1 1 45%;  
  display: flex;
  align-items: center;
  gap: 10px;
}

.habilidade span {
  font-size: 16px;
  font-weight: bold;
  color: black;
}

.barra {
  flex: 1;
  background: lightgray;
  height: 8px;
  border-radius: 5px;
  overflow: hidden;
}

.progresso {
  height: 100%;
  background: darkorange;
  transition: width 1s ease-in-out;
}

